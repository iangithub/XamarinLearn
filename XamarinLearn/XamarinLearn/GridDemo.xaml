<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinLearn.GridDemo">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="at 0,0" Grid.Row="0" Grid.Column="0" BackgroundColor="Aqua"/>
            <Label Text="at 0,1" Grid.Row="0" Grid.Column="1" BackgroundColor="Yellow"/>
            <Label Text="ColumnSpan 2" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="Red"  />
        </Grid>
    </ContentPage.Content>
</ContentPage>